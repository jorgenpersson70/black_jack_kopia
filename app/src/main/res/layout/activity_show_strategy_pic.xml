<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowStrategyPic">

    <ImageView
        android:id="@+id/strategyImage"
        android:layout_width="340dp"
        android:layout_height="519dp"
        android:layout_marginBottom="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/strat_sp_hit" />

    <ImageView
        android:id="@+id/stratarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/strategyImage"
        app:layout_constraintTop_toTopOf="@+id/strategyImage"
        app:srcCompat="@drawable/arrow_black2" />

</androidx.constraintlayout.widget.ConstraintLayout>